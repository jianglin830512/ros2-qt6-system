# 回路断路器控制命令

# --- 请求 Request ---

# 目标回路的ID
uint8 circuit_id

# 命令常量定义
uint8 CMD_TEST_BREAKER_CLOSE = 1  # 试验回路合闸
uint8 CMD_TEST_BREAKER_OPEN = 2   # 试验回路分闸
uint8 CMD_SIM_BREAKER_CLOSE = 3   # 模拟回路合闸
uint8 CMD_SIM_BREAKER_OPEN = 4    # 模拟回路分闸

# 要执行的命令
uint8 command

---
# --- 响应 Response ---

# true 表示命令已成功接收和执行
bool success

# 提供额外的信息，例如成功或失败的原因
string message
